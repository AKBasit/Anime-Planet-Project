<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 px-6 lg:px-8">      
    <div class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <h1>Create your Account</h1>
            <p class="mt-2 text-center text-sm text-gray-600 max-w">
            Already registered?
            <a href="/auth/login" class="font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">Sign in</a>
            </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
            <form class ="mb-0 space-y-6" method="post" action="/auth/signup">
                <label class="block text-sm font-medium text-gray-700">Username:
                    <div class="mt-1">
                        <input type="text" name="username" class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm">
                    </div>
                </label>

                <label class="block text-sm font-medium text-gray-700">Email:
                    <div class="mt-1">
                        <input type="email" name="email" class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm">
                    </div>
                </label>

                <label class="block text-sm font-medium text-gray-700">Password:
                    <div class="mt-1">
                        <input type="password" name="password" class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm">
                    </div>
                </label>
                
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Sign up</button>
            </form>
        </div>
    </div>
    <div class="btn-focus-in grid h-20 card bg-base-300 rounded-box place-items-center text-white">
  <a href="/" class="">
    <button class="mt-20 cursor-pointer rounded-3xl border-3 border-primary/60 px-6 py-2 text-sm font-medium text-gray-100 md:py-3 md:px-8 hover:border-primary
          bg-gray-800 bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          MAIN PAGE
    </button>
  </a>
</div>
{{#if errorMessage}}
    <p class="Error">{{errorMessage}}</p>
{{/if}}